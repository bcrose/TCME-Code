<!DOCTYPE html>
<html>
<head>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <h1> My Google Map</h1>
    <div id="map"></div>
    <script>
        function initMap() {
            //Map options
            var options = {
                zoom: 8,
                center: { lat: 42.3601, lng: -71.0589 }
            }

            //New Map
            var map = new google.maps.Map(document.getElementById('map'), options);

            //Add Marker
            var marker = new google.maps.Marker({
                position: { lat: 42.4668, lng: -709495},
                map: map
            });

            /*var infoWindow = new google.maps.InfoWindow({
                content:'<h1> Hello </h1>'
            });*/

         
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDvNyUzVPp4lgZLtMbUwAot08O1YZ36M6A&callback=initMap">
    </script>
</body>
</html>

